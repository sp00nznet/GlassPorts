# GlassPorts Build Configuration
# Edit this file to customize your build

# Android version to build (4, 5, 6, 7, 8, or 9)
# 9 = Android 9.0 Pie (recommended, most features)
# 8 = Android 8.1 Oreo
# 7 = Android 7.1 Nougat
# 6 = Android 6.0 Marshmallow
# 5 = Android 5.1 Lollipop
# 4 = Android 4.4 KitKat (original Glass base)
ANDROID_VERSION=9

# Number of parallel build jobs
# Auto-detect: leave empty or set to "auto"
# Manual: set to a number (e.g., 8, 16)
PARALLEL_JOBS=auto

# Google Glass factory image version for blob extraction
# XE24 = Latest official release (recommended)
# XE22 = Stable release
# XE21 = Previous release
GLASS_IMAGE_VERSION=XE24

# Build type
# userdebug = Debug build with root (recommended for development)
# eng = Engineering build (more debug features)
# user = Production build (no root, signed)
BUILD_TYPE=userdebug

# Enable ccache for faster rebuilds
# Set to 1 to enable, 0 to disable
USE_CCACHE=1

# ccache size (if enabled)
CCACHE_SIZE=50G

# Skip steps (for faster rebuilds)
# Set to 1 to skip, 0 to run
SKIP_DEPS_INSTALL=0
SKIP_BLOB_DOWNLOAD=0
SKIP_AOSP_SYNC=0

# Clean build before starting
# Set to 1 for clean build, 0 for incremental
CLEAN_BUILD=0

# Custom WiFi AP settings (baked into the ROM)
WIFI_AP_SSID=GlassPorts
WIFI_AP_PASSWORD=glassports

# Custom device name
DEVICE_NAME=GlassPorts

# Include additional packages (space-separated list)
# Example: EXTRA_PACKAGES="Terminal Calculator"
EXTRA_PACKAGES=

# Exclude packages (space-separated list)
# Example: EXCLUDE_PACKAGES="Browser Email"
EXCLUDE_PACKAGES=

# Output directory (relative to GlassPorts root)
OUTPUT_DIR=out

# Keep downloaded files after build
KEEP_DOWNLOADS=1

# Verbose output
VERBOSE=0

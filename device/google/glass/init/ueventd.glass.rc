# GlassPorts Device Permissions
# Google Glass Explorer Edition

# Graphics
/dev/pvrsrvkm             0666   system     system
/dev/dsscomp              0666   system     system
/dev/tiler                0666   system     system
/dev/ion                  0666   system     system

# Camera
/dev/video0               0660   media      camera
/dev/video1               0660   media      camera
/dev/video2               0660   media      camera

# Audio
/dev/snd/*                0660   system     audio

# Display
/dev/fb0                  0666   system     graphics
/dev/fb1                  0666   system     graphics

# Touchpad
/dev/input/event*         0660   system     input

# USB
/dev/bus/usb/*            0660   root       usb
/dev/usb_accessory        0660   root       usb

# GPS
/dev/ttyO0                0660   gps        gps

# Bluetooth
/dev/ttyO1                0660   bluetooth  bluetooth

# WiFi
/dev/rfkill               0660   wifi       wifi

# Sensors
/dev/iio:device*          0660   system     input

# Glass-specific
/dev/glass-touchpad       0660   system     input
/dev/glass-prism          0660   system     graphics
/dev/bone-conduction      0660   system     audio

# LED
/sys/class/leds/led:rgb   brightness  0660  system  system

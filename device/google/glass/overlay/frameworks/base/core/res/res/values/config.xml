<?xml version="1.0" encoding="utf-8"?>
<!--
    GlassPorts Framework Overlay
    Google Glass Explorer Edition
-->
<resources>
    <!-- Display -->
    <integer name="config_screenBrightnessDim">10</integer>
    <integer name="config_screenBrightnessSettingMinimum">1</integer>
    <integer name="config_screenBrightnessSettingMaximum">255</integer>
    <integer name="config_screenBrightnessSettingDefault">100</integer>

    <!-- Glass display is 640x360, equivalent to 25" HD from 8 feet -->
    <bool name="config_hasPermanentDpad">false</bool>
    <bool name="config_hasNavigationBar">false</bool>

    <!-- WiFi -->
    <bool name="config_wifi_background_scan_support">true</bool>
    <bool name="config_wifi_dual_band_support">false</bool>
    <bool name="config_wifi_softap_ieee80211ac_supported">false</bool>

    <!-- WiFi AP - GlassPorts feature -->
    <bool name="config_wifi_softap_support">true</bool>
    <integer name="config_wifi_framework_softap_timeout_default">0</integer>
    <string name="config_wifi_softap_default_ssid" translatable="false">GlassPorts</string>

    <!-- Audio -->
    <bool name="config_useMasterVolume">true</bool>
    <integer name="config_soundEffectVolumeDb">-6</integer>

    <!-- Sensors -->
    <bool name="config_autoBrightnessAvailable">false</bool>

    <!-- Power -->
    <integer name="config_lowBatteryWarningLevel">15</integer>
    <integer name="config_criticalBatteryWarningLevel">5</integer>

    <!-- Disable features not needed on Glass -->
    <bool name="config_hasRecents">false</bool>
    <bool name="config_windowShowWallpaper">false</bool>
    <bool name="config_dreamsSupportedHw">false</bool>
    <bool name="config_dreamsEnabledByDefault">false</bool>

    <!-- No status bar on Glass -->
    <dimen name="status_bar_height">0dp</dimen>

    <!-- USB -->
    <string name="config_persistentDataPackageName">com.glassports.settings</string>

    <!-- Sideloading enabled -->
    <bool name="config_hasSettingsIntelligence">false</bool>

    <!-- No lock screen -->
    <bool name="config_enableLockScreenRotation">false</bool>
    <bool name="config_disableLockscreenByDefault">true</bool>

    <!-- Bluetooth -->
    <bool name="config_bluetooth_sco_off_call">true</bool>
    <bool name="config_bluetooth_default_profiles">true</bool>
</resources>

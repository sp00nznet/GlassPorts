# GlassPorts SELinux File Contexts
# Google Glass Explorer Edition

# Device nodes
/dev/pvrsrvkm               u:object_r:gpu_device:s0
/dev/dsscomp                u:object_r:graphics_device:s0
/dev/tiler                  u:object_r:graphics_device:s0
/dev/ion                    u:object_r:ion_device:s0
/dev/video[0-9]*            u:object_r:video_device:s0
/dev/glass-touchpad         u:object_r:input_device:s0
/dev/glass-prism            u:object_r:graphics_device:s0
/dev/bone-conduction        u:object_r:audio_device:s0

# WiFi
/data/misc/wifi(/.*)?       u:object_r:wifi_data_file:s0
/data/misc/wifi/hostapd(/.*)? u:object_r:hostapd_data_file:s0

# Vendor binaries
/vendor/bin/glass-sensors   u:object_r:sensors_exec:s0

# System properties
/data/property(/.*)?        u:object_r:property_data_file:s0
